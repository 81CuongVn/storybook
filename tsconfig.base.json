{
  "compileOnSave": false,
  "compilerOptions": {
    "incremental": false,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "react",
    "moduleResolution": "Node",
    "module": "CommonJS",
    "skipLibCheck": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "target": "ES2015",
    "types": ["jest"],
    "lib": ["es2019", "dom", "ESNext"],
    "baseUrl": ".",
    "paths": {
      // Apps
      "@storybook/angular": ["app/angular/src/index.ts"],
      "@storybook/docs-tools": ["lib/docs-tools/src/index.ts"],
      "@storybook/ember": ["app/ember/src/index.ts"],
      "@storybook/html": ["app/html/src/index.ts"],
      "@storybook/manager-webpack4": ["lib/manager-webpack4/src/index.ts"],
      "@storybook/manager-webpack5": ["lib/manager-webpack5/src/index.ts"],
      "@storybook/preact": ["app/preact/src/index.ts"],
      "@storybook/react": ["app/react/src/index.ts"],
      "@storybook/server": ["app/server/src/index.ts"],
      "@storybook/svelte": ["app/svelte/src/index.ts"],
      "@storybook/vue": ["app/vue/src/index.ts"],
      "@storybook/vue3": ["app/vue3/src/index.ts"],
      "@storybook/web-components": ["app/web-components/src/index.ts"],

      // Addons
      "@storybook/addon-*": ["addons/*"],
      // Libs
      "@storybook/*": ["lib/*/src/"]
    }
  },
  "exclude": [
    "**/dist",
    "node_modules",
    "**/node_modules",
    "**/*.spec.ts",
    "**/__tests__",
    "**/*.test.ts",
    "**/FlowType*",
    "**/setup-jest.ts"
  ],
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "compilerOptions": {
      "types": ["node"]
    }
  }
}
